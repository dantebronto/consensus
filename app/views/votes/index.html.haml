%h1 Current Votes

%table
  %tr
    %td Type
    %td Name
    %td Added by
    %td{:colspan => 2}
  -@votes.each do |vote|
    %tr
      %td= vote.name
      %td= vote.type.humanize
      %td= vote.user.login if vote.user
      %td
        %a{:href => "/vote/#{vote.id}/edit"}Vote
      %td= link_to 'Show', vote
      %td= link_to 'Delete', vote, :confirm => 'Are you sure?', :method => :delete

%p
  =link_to 'New vote', new_vote_path