%h1 Current Votes

%table
  %tr
    %td Type
    %td Name
    %td{:colspan => 2}
  -@votes.each do |vote|
    %tr
      %td= vote.name
      %td= vote.kind.humanize
      %td= link_to 'Vote', edit_vote_path(vote)
      %td= link_to 'Show', vote
      %td= link_to 'Delete', vote, :confirm => 'Are you sure?', :method => :delete

%p
  =link_to 'New vote', new_vote_path